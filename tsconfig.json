{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "typings"
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
